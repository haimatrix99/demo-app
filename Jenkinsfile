pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Build Image') {
            steps {
                echo 'Building image'
            }
        }
        stage('Deploy to staging') {
            steps {
                echo 'Deploying to staging'
            }
        }
        stage('Deploy to production') {
            steps {
                echo 'Deploying to production'
            }
        }
    }
}
